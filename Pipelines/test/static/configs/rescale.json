{
  "zscore": {
    "type": "rescale",
    "method": "zscore",
    "by": ["cbwd"],
    "inputs": ["TEMP"],
    "suffix": "rescaled"
  },
  "zscore_flipped": {
    "type": "rescale",
    "method": "zscore",
    "inputs": ["TEMP", "PRES"],
    "inverse_columns": { "TEMP": "PRES" },
    "suffix": "rescaled"
  },
  "maxabs": {
    "type": "rescale",
    "method": "maxabs",
    "by": ["year", "month", "cbwd"],
    "inputs": ["TEMP"],
    "suffix": "rescaled"
  },
  "minmax": {
    "type": "rescale",
    "method": "minmax",
    "by": [],
    "inputs": ["TEMP"],
    "suffix": "rescaled"
  },
  "log": {
    "type": "rescale",
    "method": "log",
    "by": [],
    "inputs": ["PRES"],
    "suffix": "rescaled"
  },
  "logistic": {
    "type": "rescale",
    "method": "logistic",
    "by": [],
    "inputs": ["hour"],
    "suffix": "rescaled"
  }
}
